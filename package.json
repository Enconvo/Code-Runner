{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "code_runner",
  "version": "0.0.1",
  "description": "Code Runner",
  "title": "Code Runner",
  "icon": "icon.png",
  "author": "Enconvo",
  "categories": [
    "Tool"
  ],
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "code_runner",
      "title": "Code Runner",
      "description": "Run code, shell , nodejs , python , bash, applescript...",
      "mode": "no-view",
      "icon": "icon.png",
      "commandType": "tool",
      "parameters": {
        "input_text": {
          "type": "string",
          "description": "The code to be executed or the args to be passed to the code"
        },
        "code": {
          "type": "string",
          "description": "The code to be executed"
        },
        "args": {
          "type": "string",
          "description": "The args to be passed to the code"
        },
        "code_environment": {
          "type": "string",
          "description": "The code environment to be executed on",
          "enum": [
            "zsh",
            "bash",
            "nodejs",
            "applescript",
            "python"
          ]
        }
      },
      "preferences": [
        {
          "name": "code_environment",
          "title": "Code Environment",
          "description": "The code environment",
          "type": "dropdown",
          "required": true,
          "default": "zsh",
          "data": [
            {
              "title": "Zsh",
              "value": "zsh"
            },
            {
              "title": "Bash",
              "value": "bash"
            },
            {
              "title": "Nodejs",
              "value": "nodejs"
            },
            {
              "title": "AppleScript",
              "value": "applescript"
            },
            {
              "title": "Python",
              "value": "python"
            }
          ]
        },
        {
          "name": "code",
          "title": "Code",
          "description": "The code to be run",
          "type": "multiline_textfield",
          "required": true,
          "default": "",
          "placeholder": "echo 'hello world:'$1"
        },
        {
          "name": "PYTHON_BIN_PATH",
          "title": "Python Executable Path",
          "description": "The path to the python executable",
          "type": "textfield",
          "required": true,
          "default": "/usr/local/bin/python3"
        }
      ]
    },
    {
      "name": "shell_script_executor",
      "title": "Shell Script Executor",
      "description": "Run shell scripts",
      "mode": "no-view",
      "icon": "icon.png",
      "commandType": "tool",
      "parameters": {
        "input_text": {
          "type": "string",
          "description": "The code to be executed or the args to be passed to the code"
        },
        "shell_script": {
          "type": "string",
          "description": "The shell script to be executed, will be executed with `execFileSync('/bin/zsh', ['-c', shell_script], { env: process.env })` using nodejs"
        },
        "args": {
          "type": "string",
          "description": "The args to be passed to the shell script"
        }
      },
      "preferences": [
        {
          "name": "shell_script",
          "title": "Shell Script",
          "description": "The shell script to be run",
          "type": "multiline_textfield",
          "required": true,
          "default": "",
          "placeholder": "echo 'hello world:'$1"
        }
      ]
    },
    {
      "name": "applescript_executor",
      "title": "AppleScript Executor",
      "description": "Run applescript",
      "mode": "no-view",
      "icon": "icon.png",
      "commandType": "tool",
      "parameters": {
        "input_text": {
          "type": "string",
          "description": "The code to be executed or the args to be passed to the code"
        },
        "applescript": {
          "type": "string",
          "description": "The applescript to be executed, will be executed with `execFileSync('osascript', ['-e', applescript], { env: process.env })` using nodejs"
        },
        "args": {
          "type": "string",
          "description": "The args to be passed to the applescript"
        }
      },
      "preferences": [
        {
          "name": "applescript",
          "title": "AppleScript",
          "description": "The applescript to be run",
          "type": "multiline_textfield",
          "required": true,
          "default": "",
          "placeholder": "echo 'hello world:'$1"
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "^0.1.159"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  },
  "minAppVersion": "1.8.8"
}
